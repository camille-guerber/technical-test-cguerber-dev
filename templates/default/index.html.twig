{% extends 'base.html.twig' %}

{% block body %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="page-header d-print-none">
            <div class="row align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Dashboard
                    </h2>
                </div>
            </div>
        </div>
        <div class="row row-cards">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body p-2 text-center">
                        <div class="h1 mt-2 mb-0">{{ stats.opened }}</div>
                        <div class="text-muted mb-3">
                            <a href="{{ path('opened_tasks') }}">Opened tasks</a>
                        </div>
                    </div>
                </div>
                </a>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body p-2 text-center">
                        <div class="h1 mt-2 mb-0">{{ stats.unassigned }}</div>
                        <div class="text-muted mb-3">
                            <div class="text-muted mb-3">
                                <a href="{{ path('unassigned_tasks') }}">Unassigned tasks</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body p-2 text-center">
                        <div class="h1 mt-2 mb-0">{{ stats.owned }}</div>
                        <div class="text-muted mb-3">
                            <a href="{{ path('owned_opened_tasks') }}">Owned opened tasks</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container-tight py-6">
            <form class="card card-md" method="post">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Login to your account</h2>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="input-icon mb-3">
                        <span class="input-icon-addon">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-at" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                              <circle cx="12" cy="12" r="4" />
                              <path d="M16 12v1.5a2.5 2.5 0 0 0 5 0v-1.5a9 9 0 1 0 -5.5 8.28" />
                            </svg>
                        </span>
                        <input type="email" class="form-control" placeholder="Enter email" value="{{ lastUsername }}" name="email" id="inputEmail">
                    </div>

                    <div class="input-icon mb-3">
                        <span class="input-icon-addon">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-lock" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                              <rect x="5" y="11" width="14" height="10" rx="2" />
                              <circle cx="12" cy="16" r="1" />
                              <path d="M8 11v-4a4 4 0 0 1 8 0v4" />
                            </svg>
                        </span>
                        <input type="password" class="form-control" placeholder="Password" name="password" id="inputPassword">
                    </div>


                    <div class="mb-2">
                        <label class="form-check">
                            <input type="checkbox" class="form-check-input" name="_remember_me">
                            <span class="form-check-label">Remember me on this device</span>
                        </label>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary w-100">Sign in</button>
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
{% endblock %}