{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">
                    Customers
                </h2>
            </div>
        </div>
    </div>
    <div class="card">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Label</th>
                    <th class="text-center">Tasks</th>
                    <th class="text-right">
                        <a href="{{ path('customer_add') }}" class="text-muted">
                            <i class="fas fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for customer in customers %}
                    <tr>
                        <td>{{ customer }}</td>
                        <td class="text-center">{{ customer.tasks.count }}</td>
                        <td class="text-right">
                            <a href="{{ path('customer_edit', {'customer': customer.id}) }}" class="text-muted">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="{{ path('customer_delete', {'customer': customer.id}) }}" class="text-muted">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center">
                            <em>No customer found</em>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="card-footer pb-0">
            {{ pagination(customers) }}
        </div>
    </div>
{% endblock %}
