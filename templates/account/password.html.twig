{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">
                     {{ "Update " ~ app.user.firstname ~ " " ~ app.user.lastname ~ "'s password" }}
                </h2>
            </div>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="card">
        <div class="card-body">
            {{ form_row(form.password_current) }}
            {{ form_row(form.password_new.first) }}
            {{ form_row(form.password_new.second) }}
        </div>
        <div class="card-footer text-center">
            <button class="btn btn-primary">
                <i class="fas fa-save m-1"></i> Save
            </button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
