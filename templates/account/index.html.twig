{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="page-title">
                    {{ user.firstname }} {{ user.lastname }}'s dashboard
                </h2>
            </div>
        </div>
    </div>

    <div class="row row-cards">
        <div class="col-sm-4">
            <div class="card">
                <a class="card-body p-2 text-center" href="{{ path('user_edit', { 'user' : app.user.id }) }}">
                    <i class="fas fa-user fa-4x"></i>
                    <div class="h1 mt-2 mb-0">Edit my account</div>
                </a>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <a class="card-body p-2 text-center" href="{{ path('account_password') }}">
                    <i class="fas fa-key fa-4x"></i>
                    <div class="h1 mt-2 mb-0">Change my password</div>
                </a>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <a class="card-body p-2 text-center" href="{{ path('task', { 'user' : app.user.id }) }}">
                    <i class="fas fa-tasks fa-4x"></i>
                    <div class="h1 mt-2 mb-0">My tasks</div>
                </a>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <a class="card-body p-2 text-center" href="{{ path('task_add') }}">
                    <i class="fas fa-plus fa-4x"></i>
                    <div class="h1 mt-2 mb-0">Add new task</div>
                </a>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <a class="card-body p-2 text-center" href="{{ path('logout') }}">
                    <i class="fas fa-sign-out-alt fa-4x"></i>
                    <div class="h1 mt-2 mb-0">
                        Logout
                    </div>
                </a>
            </div>
        </div>
    </div>
{% endblock %}